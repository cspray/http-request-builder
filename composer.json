{
  "name": "cspray/http-request-builder",
  "description": "A fluent API to build Requests for use with amphp/http-client",
  "license": ["MIT"],
  "minimum-stability": "beta",
  "require": {
    "php": "^8.1",
    "amphp/http": "^v2.0",
    "amphp/http-client": "^v5.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "Cspray\\HttpRequestBuilder\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cspray\\HttpRequestBuilder\\Tests\\": "tests"
    }
  }
}